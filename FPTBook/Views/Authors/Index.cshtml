@model IEnumerable<FPTBook.Models.Author>

@{
    ViewData["Title"] = "List of Authors";
}

<h1>List of Authors</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                <img src="@item.ProfilePictureURL" class="rounded" style="max-width: 150px"/>
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
    <div style="position: fixed; right: 25px; bottom: 25px" class="text-white">
        <a asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New </a>
    </div>
</table>
